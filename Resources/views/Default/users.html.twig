{% extends 'VivaAuthBundle:Default:base.html.twig' %}
{% block sectiontitle %}User Management{% endblock %}
{% block sectionlinks %}<a href="{{ path('viva_auth_user_edit') }}" class="ajax-dialog btn"><i class="glyphicon glyphicon-plus-sign"></i> Add User</a>{% endblock %}

{% block section %}
  <div class="row">
    <div class="col-md-12">
		{% if db | length > 0 %}
		<table class="table table-condensed table-bordered">
			<thead>
				<tr>
					<th>Active</th>
					<th>Username</th>
					<th>Initials</th>
					<th>Full Name</th>
					<th>Email Address</th>
					<th>Groups</th>
					<th>Receive Queue</th>
					<th>Send to Queue</th>
					<th>Tenants</th>
					<th>Control</th>
				</tr>
			</thead>
		{% for row in db %}
			<tr>
				<td>{{ row.active|yesnoicon|raw }}</td>
				<td><a href="{{ path('viva_auth_user_edit', {'id': row.id})}}" class="ajax-dialog">{{ row.username }}</a></td>
				<td>{{ row.fullname }}</td>
				<td>{{ row.initials }}</td>
				<td>{{ row.email }}</td>
				<td>
                    {% for group in row.groups %}<div class="cell-divider">{{ group.name }}</div>{% endfor %}
                </td>
				<td>
                    {% for queues in [row.queues1, row.queues2, row.queues3, row.queues4] %}
                        {% for queue in queues %}<div class="cell-divider">{{ queue.fullname }}</div>{% endfor %}
                    {% endfor %}
                </td>
				<td>
                    {% for queue in row.sendtoqueues %}<div class="cell-divider">{{ queue.fullname }}</div>{% endfor %}
				</td>
				<td>
                    {% for tenant in row.tenants %}<div class="cell-divider">{{ tenant.tenant }}</div>{% endfor %}
				</td>
				<td class="action">
					<a href="{{ path('viva_auth_user_delete', {'id': row.id})}}" class="confirm-message" data-confirm-message="Are you sure that you want to delete this item?"><i class="glyphicon glyphicon-trash"></i></a>
				</td>
			</tr>
		{% endfor %}
		</table>
		{% else %}
		<div class="alert alert-block"><p>There are no users set up</p></div>
		{% endif %}
</div>

{% endblock %}